  <!DOCTYPE html>
	<html>
	<head>
	  <title>pdge.me</title>
	  <style>
	  body {
	    font-family:"Helvetica", Sans-Serif;
	  }
	  .container {
	    width:400px;
	    margin:120px auto 0px auto;
	  }
	  h1 {
	    width:400px;
	    margin:0;
	    text-align:center;
	    color:red;
	    font-size:40px;
	    padding-bottom:8px;
	    border-bottom:2px solid black;
	  }
	  form {
	    display:block;
	    width:400px;
	    overflow: hidden;
	    padding-top: 1.0em;
	  }
	  input {
	    display:block;
	    padding:8px;
	    font-size:16px;
	    margin: 0 auto 0 auto;
	  }
	  #url {
	    width:90%;
	    margin-right:12px;
	  }
	  .total {
  	  text-transform: uppercase;
  	  text-align: center;
  	  color: red;
  	  font-size: 1.0em;
  	  font-weight: bold;
  	  border-bottom: 2px solid black;
  	  padding: 1.0em;
	  }
	  .total p {
  	  margin: 0;
	  }
	  .total em {
	    color: black;
	    font-style: normal;
    }
	  .result {
	    clear:both;
	    width:400px;
	    padding-top:12px;
	    text-align:center;
	  }
	  .result a {
	    font-size:24px;
	    display:block;
	    margin-top:8px;
	    color:#ff2d11;
	    background:#ffd2cc;
	    padding:8px;
	  }
	  </style>
	</head>
	<body>
	  <div class="container">
	    <h1>pdge.me</h1>
	    <form method="post">
	      <input type="text" value="<%= h(params[:url]) %>" name="url" id="url" />
	    </form>
	    <div class="total">
	      <p>Total Shortened: <em><%= size %></em></p>
	    </div>
	    <% if @shortcode %>
	      <div class="result">
	        Your shortened URL is: <a href="http://www.pdge.me/<%= @shortcode %>">http://www.pdge.me/<%= @shortcode %></a>
	      </div>
	    <% end %>
	  </div>
	</body>
